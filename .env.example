# Root .env file for Docker Compose
# This file is used by docker-compose.yml to populate environment variables

# Security
SECRET_KEY=YOUR-SECRET_KEY

# OAuth2 Configuration
OAUTH2_ENABLED=true

# Google OAuth2
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=dummy-google-client-id-for-testing
GOOGLE_CLIENT_SECRET=dummy-google-secret-for-testing
GOOGLE_REDIRECT_URI=http://localhost:4201/auth/callback/google

# GitHub OAuth2
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=dummy-github-client-id-for-testing
GITHUB_CLIENT_SECRET=dummy-github-secret-for-testing
GITHUB_REDIRECT_URI=http://localhost:4201/auth/callback/github

# Microsoft OAuth2
# Get credentials from: https://portal.azure.com/#blade/Microsoft_AAD_IAM/ActiveDirectoryMenuBlade/RegisteredApps
MICROSOFT_CLIENT_ID=dummy-microsoft-client-id-for-testing
MICROSOFT_CLIENT_SECRET=dummy-microsoft-secret-for-testing
MICROSOFT_REDIRECT_URI=http://localhost:4201/auth/callback/microsoft

# Frontend URL
FRONTEND_URL=http://localhost:4201
